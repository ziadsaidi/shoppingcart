<div class="row">

<div class="col-md-4 col-offset md-4">
<h1> Sign Up</h1>

{{#if hasErrors }}
{{#each messages as |err| }}
  <div class="alert alert-danger">
  
     {{err}}
 
  </div> 
   {{/each}}
{{/if}}
    <form action="/users/signup" method="POST">

        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email"  name="email" class="form-control" />


        </div>
         <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password"  name="password" class="form-control" />


        </div>
         <div class="form-group">
            <label for="passwordConfirmation">Confirm Password</label>
            <input type="password" id="passwordConfirmation"  name="passwordConfirmation" class="form-control" />


        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />

        <button type="submit" id="submit" class="pull-left btn btn-primary"> Sign UP</button>
        <a type="button" href="/users/signin"   class=" pull-right btn btn-light">
           sign-in
        </a>
        
    </form>
</div>

</div>